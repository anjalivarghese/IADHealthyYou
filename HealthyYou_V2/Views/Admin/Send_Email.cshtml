@model HealthyYou_V2.Models.SendEmailViewModel

@{
    /**/

    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>View</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    if (@ViewBag.Result != null)
    {
        <div class="alert alert-info">@ViewBag.Result</div>
    }

    <div class="form-horizontal">
        <h4>SendEmailViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.ToEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                <p>@Html.DisplayFor(model => model.ToEmail)</p>
            </div>
            <input type="text" class="form-control" name="toEmail"
                   value="@(ViewBag.toEmail)">
        </div>

        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                <p>@Html.DisplayFor(model => model.Subject)</p>
            </div>
            <input type="text" class="form-control" name="Subject"
                   value="@(ViewBag.Subject)">
        </div>


        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label col-md-2" })
                <p>@Html.DisplayFor(model => model.Contents)</p>
            </div>
            <input type="text" class="form-control" name="contents"
                   value="@(ViewBag.Contents)">
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </div>

        <div>
            @Html.ActionLink("Back to View Customer", "ViewCustomer")
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<HealthyYou_V2.Models.Planner>

@{
    ViewBag.Title = "Planner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Planner</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Recipe Name")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Weight in units")
        </th>
        <th>
            @Html.DisplayName("Calorie Consumed")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Recipe.RecipeName)
        </td>
        <td>
            <p>@item.OnDate.ToShortDateString()</p>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Calconsumed)
        </td>
    </tr>
    }
</table>
